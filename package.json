{
  "private": true,
  "type": "module",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "clean:jq": "rimraf --glob packages/jq/{functions,methods,shared,static} packages/jq/*.{js,d.ts}",
    "clean:shared": "rimraf --glob packages/shared/{base,controllers,decorators,helpers,icons,lit-styles,mixins} packages/shared/src/icons/*.ts packages/shared/src/icons/shared/style.ts packages/shared/mixin.less",
    "clean:mdui": "rimraf --glob packages/mdui/{components,functions,internal,locales} packages/mdui/src/components/**/*style.ts packages/mdui/*.{js,d.ts} packages/mdui/mdui.css",
    "clean:icons": "rimraf --glob packages/icons/src/*.ts packages/icons/*.{js,d.ts}",
    "clean": "run-p clean:*",
    "lint:jq": "eslint --fix packages/jq/src/**/*.ts",
    "lint:shared": "stylelint --fix packages/shared/src/**/*.less && eslint --fix packages/shared/src/**/*.ts",
    "lint:mdui": "stylelint --fix packages/mdui/src/**/*.less && eslint --fix packages/mdui/src/**/*.ts",
    "lint": "run-p lint:*",
    "build:jq": "tsc -p packages/jq/tsconfig.json",
    "build:shared": "tsx scripts/shared/make-icons.ts && tsx scripts/shared/build-less.ts && tsx scripts/shared/build-lit-style.ts && tsc -p packages/shared/tsconfig.json && tsx scripts/shared/build-js.ts",
    "build:mdui": "tsx scripts/mdui/build-less.ts && tsx scripts/mdui/build-lit-style.ts && tsc -p packages/mdui/tsconfig.json && tsx scripts/mdui/build-lit-js.ts && npm-run-all -s localize-build customElements:mdui i18n -p vscode:mdui webtypes:mdui jsxtypes:mdui",
    "build:mdui-dev": "tsx scripts/mdui/build-less.ts --dev && tsx scripts/mdui/build-lit-style.ts --dev && tsc -p packages/mdui/tsconfig.json && tsx scripts/mdui/build-lit-js.ts --dev && npm run localize-build",
    "build:icons": "tsc -p packages/icons/tsconfig.json && tsx scripts/icons/build-lit-js.ts",
    "build": "npm-run-all -s clean lint build:jq build:shared -p build:mdui build:icons",
    "build-dev": "npm-run-all -s clean lint build:jq build:shared -p build:mdui-dev build:icons",
    "bundle": "npm run build && rollup --config scripts/mdui/rollup.config.js",
    "test:jq": "eslint --fix packages/jq/__test__/**/*.ts && tsc -p packages/jq/__test__/tsconfig.json && tsx scripts/jq/test.ts",
    "test:mdui": "eslint --fix packages/mdui/src/**/*.test.ts && tsc -p packages/mdui/tsconfig.json && tsx scripts/mdui/test.ts",
    "test": "run-s test:*",
    "watch:jq": "tsc --watch --preserveWatchOutput -p packages/jq/tsconfig.json",
    "watch:shared": "tsc --watch --preserveWatchOutput -p packages/shared/tsconfig.json",
    "watch:mdui": "tsc --watch --preserveWatchOutput -p packages/mdui/tsconfig.json",
    "dev:shared": "tsx scripts/shared/dev.ts --dev",
    "dev:mdui": "tsx scripts/mdui/dev.ts --dev",
    "dev-only": "concurrently -k -r \"npm:watch:*\" \"npm:dev:*\" \"vite --config scripts/vite.config.ts --host\"",
    "dev": "run-s build-dev dev-only",
    "customElements:mdui": "cem analyze --config \"scripts/mdui/cem.js\"",
    "i18n": "tsx scripts/build-i18n.ts",
    "vscode:mdui": "tsx scripts/mdui/build-vscode-data.ts",
    "webtypes:mdui": "tsx scripts/mdui/build-web-types.ts",
    "jsxtypes:mdui": "tsx scripts/mdui/build-jsx-types.ts",
    "localize-extract": "lit-localize extract --config packages/mdui/lit-localize.json",
    "localize-build": "lit-localize build --config packages/mdui/lit-localize.json",
    "publish": "npm run bundle && pnpm publish --recursive --access public --publish-branch v2"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "0.10.2",
    "@lit/localize-tools": "^0.7.2",
    "@material-design-icons/svg": "^0.14.13",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-commonjs": "^26.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/clean-css": "^4.2.11",
    "@types/eslint": "^8.56.10",
    "@types/less": "^3.0.6",
    "@types/jquery": "^3.5.30",
    "@types/mocha": "^10.0.7",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "@vscode/vsce": "^2.29.0",
    "@web/dev-server-rollup": "^0.6.4",
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-playwright": "^0.11.0",
    "autoprefixer": "^10.4.19",
    "clean-css": "^5.3.3",
    "concurrently": "^8.2.2",
    "custom-elements-manifest": "^2.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-lit": "^1.14.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jquery": "^3.7.1",
    "less": "^4.2.0",
    "less-plugin-npm-import": "^2.1.0",
    "lint-staged": "^15.2.7",
    "minify-html-literals": "^1.3.5",
    "node-watch": "^0.7.4",
    "npm-run-all": "^4.1.5",
    "playwright": "^1.45.1",
    "postcss": "^8.4.39",
    "postcss-less": "^6.0.0",
    "pretender": "^3.4.7",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "rollup": "^4.18.0",
    "rollup-plugin-visualizer": "^5.12.0",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.1",
    "tsx": "^4.16.2",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "vscode-css-languageservice": "^6.3.0",
    "vscode-html-languageservice": "^5.3.0",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.less": [
      "stylelint --fix"
    ],
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  }
}
