{
  "name": "mdui",
  "version": "1.0.0",
  "description": "a CSS Framework based on material design",
  "main": "dist/js/mdui.js",
  "module": "dist/js/mdui.esm.js",
  "types": "es/index.d.ts",
  "style": "dist/css/mdui.css",
  "less": "src/index.less",
  "scripts": {
    "eslint": "eslint --fix src/**/*.ts",
    "stylelint": "stylelint --fix src/**/*.less",
    "lint": "npm run eslint && npm run stylelint",
    "js": "npm run eslint && tsc -p src/tsconfig.json --moduleResolution node && rollup --config",
    "css": "npm run stylelint && gulp",
    "build": "npm run js && npm run css"
  },
  "files": [
    "dist",
    "es",
    "src",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zdhxiong/mdui.git"
  },
  "keywords": [
    "material design",
    "responsive",
    "framework",
    "front-end",
    "mobile-first",
    "web"
  ],
  "author": "zdhxiong",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zdhxiong/mdui/issues",
    "email": "zdhxiong@gmail.com"
  },
  "homepage": "https://mdui.org",
  "dependencies": {
    "mdn-polyfills": "^5.20.0",
    "mdui.jq": "^2.0.0",
    "normalize.css": "^8.0.1",
    "promise-polyfill": "^8.1.3"
  },
  "devDependencies": {
    "@rollup/plugin-buble": "^0.21.3",
    "@rollup/plugin-node-resolve": "^8.1.0",
    "@rollup/plugin-typescript": "^5.0.1",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "@typescript-eslint/parser": "^3.6.0",
    "autoprefixer": "^9.8.4",
    "eslint": "^7.4.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^7.0.1",
    "gulp-clean-css": "^4.3.0",
    "gulp-header": "^2.0.9",
    "gulp-less": "^4.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^2.6.5",
    "husky": "^4.2.5",
    "prettier": "^2.0.5",
    "rollup": "^2.20.0",
    "rollup-plugin-polyfill": "^3.0.0",
    "rollup-plugin-uglify": "^6.0.4",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^20.0.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.6"
  },
  "engines": {
    "node": ">=12"
  }
}
