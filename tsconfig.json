  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "useDefineForClassFields": false,
    "module": "es2020",
    "target": "es2021",
    "lib": ["es2021", "dom", "dom.iterable"],
    "declaration": true
  }
}
